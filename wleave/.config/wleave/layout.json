{
    "margin": 200,
    "delay-command-ms": 100,
    "close-on-lost-focus": true,
    "show-keybinds": true,
    "buttons": [
        {
            "label": "lock",
            "action": "hyprlock",
            "text": "Lock",
            "keybind": "l",
            "icon": "/home/amitr/.config/wleave/icons/lock.svg"
        },
        {
            "label": "hibernate",
            "action": "systemctl hibernate",
            "text": "Hibernate",
            "keybind": "h",
            "icon": "/home/amitr/.config/wleave/icons/hibernate.svg"
        },
        {
            "label": "logout",
            "action": "hyprctl dispatch exit",
            "text": "Logout",
            "keybind": "e",
            "icon": "/home/amitr/.config/wleave/icons/logout.svg"
        },
        {
            "label": "shutdown",
            "action": "systemctl poweroff",
            "text": "Shutdown",
            "keybind": "s",
            "icon": "/home/amitr/.config/wleave/icons/shutdown.svg"
        },
        {
            "label": "suspend",
            "action": "systemctl suspend",
            "text": "Suspend",
            "keybind": "u",
            "icon": "/home/amitr/.config/wleave/icons/suspend.svg"
        },
        {
            "label": "reboot",
            "action": "systemctl reboot",
            "text": "Reboot",
            "keybind": "r",
            "icon": "/home/amitr/.config/wleave/icons/reboot.svg"
        }
    ]
}